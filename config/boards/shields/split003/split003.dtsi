#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <22>;
        
        map = <
            RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)                          RC(0,12) RC(0,13) RC(0,14) RC(0,15) RC(0,16) RC(0,17)
            RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)        RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15) RC(1,16) RC(1,17)
            RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)        RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15) RC(2,16) RC(2,17)
                    RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10)        RC(3,11) RC(3,12) RC(3,13) RC(3,14) RC(3,15) RC(3,16)
                    
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        status = "okay";
        wakeup-source;
    };

    
};
